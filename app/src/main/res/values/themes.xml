<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchotersTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LightThemeBase">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="BoldThemeBase">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SplashTitleTheme" parent="BoldThemeBase">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopAppBarTheme">
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="SourceNewsItemTheme" parent="LightThemeBase">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleNewsItemTheme" parent="BoldThemeBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ErrorTextTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>